{
  "info": {
    "_postman_id": "b5a92f81-c5b4-4e13-94c5-fadbde09b111",
    "name": "Productos API - Errores y Validaciones",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "POST ❌ Crear con campos vacíos",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"\",\n  \"precio\": 0,\n  \"stock\": -10,\n  \"categoria\": \"\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/productos",
          "host": ["{{base_url}}"],
          "path": ["api", "productos"]
        },
        "description": "Intenta crear un producto con datos inválidos. Debe devolver 400 con mensajes de validación de cada campo."
      },
      "response": []
    },
    {
      "name": "GET ❌ ID inexistente (ProductoNotFoundException)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/productos/9999",
          "host": ["{{base_url}}"],
          "path": ["api", "productos", "9999"]
        },
        "description": "Busca un producto que no existe. Debe devolver 404 con JSON { \"error\": \"Producto no encontrado con id 9999\" }"
      },
      "response": []
    },
    {
      "name": "PUT ❌ Actualizar ID inexistente",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Producto Fantasma\",\n  \"precio\": 10.0,\n  \"stock\": 10,\n  \"categoria\": \"Test\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/productos/8888",
          "host": ["{{base_url}}"],
          "path": ["api", "productos", "8888"]
        },
        "description": "Actualiza un ID inexistente. Debe devolver 404 manejado por GlobalExceptionHandler."
      },
      "response": []
    },
    {
      "name": "POST ❌ Violación de regla de negocio (Validator)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Stock enorme con precio bajo\",\n  \"precio\": 0.5,\n  \"stock\": 2000,\n  \"categoria\": \"Test\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/productos",
          "host": ["{{base_url}}"],
          "path": ["api", "productos"]
        },
        "description": "Provoca la excepción ProductoInvalidoException definida en ProductoValidator. Debe devolver 400 con JSON { \"error\": \"Precio demasiado bajo para un stock tan alto\" }"
      },
      "response": []
    },
    {
      "name": "POST ❌ Producto digital con stock > 0",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Ebook erróneo\",\n  \"precio\": 9.99,\n  \"stock\": 1,\n  \"categoria\": \"digital\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/productos",
          "host": ["{{base_url}}"],
          "path": ["api", "productos"]
        },
        "description": "Prueba de validación personalizada. El validator lanza ProductoInvalidoException porque los productos digitales no deben tener stock físico."
      },
      "response": []
    },
    {
      "name": "GET ❌ ID inválido (Validación @Min)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/productos/0",
          "host": ["{{base_url}}"],
          "path": ["api", "productos", "0"]
        },
        "description": "Prueba de validación de parámetro @Min(1). Debe devolver 400 BAD REQUEST."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}
